{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "redis",
    "creationTimestamp": null
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "service": "redis"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "opev_redis",
            "persistentVolumeClaim": {
              "claimName": "opev_redis"
            }
          }
        ],
        "containers": [
          {
            "name": "redis",
            "image": "redis:3-alpine",
            "args": [
              "redis-server"
            ],
            "ports": [
              {
                "containerPort": 6379,
                "protocol": "TCP"
              }
            ],
            "resources": {},
            "volumeMounts": [
              {
                "name": "opev_redis",
                "mountPath": "/var/lib/redis/data"
              }
            ]
          }
        ],
        "restartPolicy": "Always"
      }
    },
    "strategy": {}
  },
  "status": {}
}
