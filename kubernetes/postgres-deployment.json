{
  "kind": "Deployment",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "postgres",
    "creationTimestamp": null
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "creationTimestamp": null,
        "labels": {
          "service": "postgres"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "data-claim0",
            "persistentVolumeClaim": {
              "claimName": "data-claim0"
            }
          }
        ],
        "containers": [
          {
            "name": "postgres",
            "image": "postgres:9.5",
            "ports": [
              {
                "containerPort": 5432,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "POSTGRES_PASSWORD",
                "value": "test"
              }
            ],
            "resources": {},
            "volumeMounts": [
              {
                "name": "data-claim0",
                "mountPath": "/var/lib/postgresql"
              }
            ]
          }
        ],
        "restartPolicy": "Always"
      }
    },
    "strategy": {}
  },
  "status": {}
}